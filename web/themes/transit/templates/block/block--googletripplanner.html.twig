{% block content %}
  <div class="row">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 route-errors" id="trip-errors"></div>
        <div class="route-form col-xs-12 col-sm-12 col-md-3 col-lg-3 pull-right">
          <div class="form-group from-field">
            <label for="start_add" class="sr-only">Starting Address</label>
            <input type="text" id="start_add" name="start_add" value="" placeholder="Enter a starting address" class="form-control">
          </div>
          <div class="form-group to-field">
            <label for="dest_add" class="sr-only">Destination Address</label>
            <input type="text" id="dest_add" name="dest_add" value="" placeholder="Enter a destination address" class="form-control padding">
          </div>
          <div class="form-group date-field">
            <label for="date" class="sr-only">Select a Date</label>
            <input type="text" id="date" name="date" class="form-control">
          </div>
          <div class="form-group type-field">
            <label for="ttype" class="sr-only">Is this when you would like to arrive or depart?</label>
            <select class="form-control" id="ttype" name="ttype">
                <option value="dep">Depart</option>
                <option value="arr">Arrive</option>
            </select>
          </div>
          <div class="form-group time-field">
            <label for="time" class="sr-only">Select a Time</label>
            <input type="text" name="selected_time" id="time-input" class="hidden" aria-hidden="true" />
            <input class="form-control timepicker-content" id="time" name="time">
          </div>
          <div class="form-group opt-field">
            <label for="opt" class="sr-only">Route Options</label>
             <select class="form-control padding" id="opt" name="opt">
                <option selected="selected" value="FEWER_TRANSFERS">Fewer Transfers</option>
                <option value="LESS_WALKING">Less Walking</option>
             </select>
          </div>
  		    <div>
              <button id="btn-map" class="btn btn-block btn-primary">Get Directions</button>
  		    </div>
        </div>
      <!-- Displays the map-->
      <div class="route-map-wrapper col-xs-12 col-md-9">
        <div id="route-map" style="height: 500px; width: 100%;"></div>
      </div>
    </div>
    <div id="route-results"></div>
  </div>


  <!-- Replace the value of the key parameter with your own API key. -->
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqUxJwPyuHfnatPYCrCwLKjsAi5r7iRPI&libraries=places&callback=initMap"></script>
  <!--https://developers.google.com/maps/documentation/javascript/directions-->
</div>

{% endblock %}